package com.string;
import java.util.*;
public class Speccount {
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		int count=0;
		System.out.println("enter a String");
		String s=sc.next();
		for(int i=0;i<s.length();i++)
		{	char ch=s.charAt(i);
			if(ch>='a' && ch<='z' || ch>='A' && ch<='Z') {
				
			}
			else if(ch>=0 || ch>=9) {
				
			}
			else if(ch==' ') {
				count+=1;
			}
			else {
				count+=1;
			}
		}
		System.out.println("special and spaces count is:="+count);
	}

}
